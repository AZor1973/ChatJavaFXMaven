<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextArea?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.azor.client.controllers.ChatController">
    <SplitPane dividerPositions="0.3" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0"
                    prefHeight="160.0" prefWidth="100.0">
            <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <ListView fx:id="usersList" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" VBox.vgrow="ALWAYS"/>
                <Button fx:id="reconnectButton" mnemonicParsing="false" onAction="#reconnectToServer" prefHeight="25.0"
                        prefWidth="180.0" text="Реконнект"/>
            </VBox>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <SplitPane dividerPositions="0.8" orientation="VERTICAL" prefHeight="398.0" prefWidth="486.0"
                       AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="0.0">
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="30.0" prefWidth="200.0">
                        <Label alignment="CENTER" prefHeight="42.0" text="Чат">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </HBox>
                    <TextArea fx:id="chatHistory" editable="false" maxHeight="1.7976931348623157E308" prefWidth="200.0"
                              wrapText="true" VBox.vgrow="ALWAYS"/>
                </VBox>
                <AnchorPane maxHeight="50.0" minHeight="30.0" minWidth="0.0" prefWidth="160.0">
                    <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <TextArea fx:id="messageTextArea" onKeyPressed="#sendTextAreaMessage" prefHeight="200.0"
                                  prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="sendButton" maxHeight="1.7976931348623157E308" mnemonicParsing="false"
                                onAction="#sendMessage" prefWidth="100.0" text="Send" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </AnchorPane>
            </SplitPane>
        </AnchorPane>
    </SplitPane>
</AnchorPane>
